# ======================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ======================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Domain & CORS
DOMAIN=gisconnect.online
CORS_ORIGIN=https://gisconnect.online,https://app.gisconnect.online,https://api.gisconnect.online

# Database Path (ensure it exists and is writable)
DB_PATH=/var/www/gisconnect/databases

# JWT Secret (MUST CHANGE - use strong random string min 32 chars)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-long-random-string-minimum-32-characters

# Upload Configuration
UPLOAD_PATH=/var/www/gisconnect/uploads
MAX_UPLOAD_SIZE=10485760

# Sync Scheduler (Cron format)
SYNC_SCHEDULE_1=0 12 * * *
SYNC_SCHEDULE_2=0 18 * * *

# HTTPS Configuration
HTTPS_ENABLED=true

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_TIMEOUT=3600000

# API Configuration
API_TIMEOUT=30000

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@gisconnect.online

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
