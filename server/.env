# GIS2026 Production Environment Configuration
# Created: December 28, 2025
# DO NOT COMMIT THIS FILE - Add to .gitignore

# =====================================
# SERVER CONFIGURATION
# =====================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =====================================
# DOMAIN & CORS
# =====================================
CORS_ORIGIN=https://gisconnect.online

# =====================================
# DATABASE CONFIGURATION
# =====================================
DATABASE_PATH=./database
DATABASE_TYPE=sqlite

# =====================================
# FILE UPLOAD CONFIGURATION
# =====================================
UPLOAD_PATH=./uploads
EXCEL_UPLOAD_PATH=./uploads/excel
IMAGE_UPLOAD_PATH=./uploads/images
MAX_FILE_SIZE=52428800
ALLOWED_UPLOAD_TYPES=xlsx,xls

# =====================================
# AUTHENTICATION
# =====================================
# DEFAULT ADMIN - CHANGE AFTER FIRST LOGIN
DEFAULT_ADMIN_USERNAME=gis2026
DEFAULT_ADMIN_PASSWORD=gis2026

# JWT Configuration - CHANGE THIS IN PRODUCTION
JWT_SECRET=change-this-to-a-very-long-random-string-in-production-immediately
JWT_EXPIRY=7d

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# LOGGING
# =====================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =====================================
# SESSION CONFIGURATION
# =====================================
SESSION_SECRET=your-session-secret-key-change-this
SESSION_TIMEOUT=3600000

# =====================================
# MOBILE APP CONFIGURATION
# =====================================
MOBILE_APP_VERSION=1.0.0
MOBILE_CHECK_IN_RADIUS=100

# =====================================
# SYNC CONFIGURATION
# =====================================
SYNC_INTERVAL=300000
SYNC_ENABLED=true

# =====================================
# SOCKET.IO CONFIGURATION
# =====================================
SOCKET_IO_ENABLED=true
SOCKET_IO_PING_INTERVAL=25000
SOCKET_IO_PING_TIMEOUT=60000

# =====================================
# BACKUP CONFIGURATION
# =====================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
